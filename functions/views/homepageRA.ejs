	<!-- createMeetingModal -->
	<div class="modal fade" id="modalCreate" tabindex="-1" role="dialog" aria-labelledby="CreateModalCenterTitle"
		aria-hidden="true">
		<div class="modal-dialog modal-dialog-centered" role="document">
			<div class="modal-content homepageModal">
				<div class="modal-header">
					<h5 class="modal-title" id="modalCreateTitle">Create Meeting</h5>
					<button type="button" class="close" data-dismiss="modal" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
				</div>
				<div class="modal-body">
					<div class="container-fluid">
						<div class="row" style="text-align: center;">
							<div class="col-md-12">
								<h4 style="display: inline-block;">Enter Room Details<h2>
							</div>
						</div>
						<div class="row" style="text-align: center;">
							<div class="col-md-12">
								<div class="field-wrapper">
									<input type="text" name="text" id="roomName" class="form-control" autocomplete="off"
